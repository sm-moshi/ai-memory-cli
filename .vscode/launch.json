{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug CLI",
      "program": "${workspaceFolder}/dist/ai-memory-cli.js",
      "args": ["--stdio"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
      "args": ["watch"],
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ]
}
